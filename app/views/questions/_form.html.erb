<%= render "layouts/errors", :object => @question %>

<%= simple_form_for @question do |f| %>
  <div class="form-group">
    <%= f.label :query %>
    <%= f.text_area :query, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :user_name %>
    <%= f.text_field :user_name, :class => "form-control" %>
  </div>
    <%= f.submit :class => "btn btn-success"%>
<% end %>
